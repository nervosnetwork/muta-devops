[INPUT]
    Name        tail
    Db /tmp/muta/logs/muta.db
    Path /tmp/muta/logs/metrics.log
    Path_key log_path
    Parser muta
    Tag muta.metrics

[FILTER]
    Name    modify
    Match   *
    Add source_ip {{ source_ip }}

[OUTPUT]
    Name file
    Match *
    Path /tmp/muta/logs/metrics.log.fluent-bit

[OUTPUT]
    Name  es
    Match muta.metrics
    Host 47.56.237.128
    Port  4101
    Index muta_metrics
